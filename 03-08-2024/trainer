CREATE DATABASE trainer_search_db;


USE trainer_search_db;

CREATE TABLE trainer(
	id integer primary key identity(1,1), -- auto generation column
	name varchar(255) not null,
	skill varchar(512) not null,
	place varchar(126) not null
);
-- to see table "trainer"
sp_help trainer;
--to disdplay rows of trainer
SELECT * FROM trainer;
-- to insert one trainer
INSERT INTO trainer(name, skill,place)VALUES('mahesh','c#','mysore');
-- to insert one trainer multiline cmd
INSERT INTO trainer(name, skill,place)
VALUES('gopal','c#','tvm');
--to insert many trainer multiline cmd
INSERT INTO trainer(name, skill,place)
	VALUES('sanjay','mangement','kochi'),
			('mishel','wpf','idukki');

DELETE FROM trainer WHERE id IN (2,3,4);

SELECT name, skill FROM trainer WHERE id IN(1,5);

UPDATE trainer
SET skill='wpf and c#'
WHERE id IN(1,5);

UPDATE trainer
